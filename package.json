  "scripts": {
    "build": "tsdown --sourcemap --minify",
    "build:watch": "tsdown --sourcemap --minify --watch ./src",
    "start:watch": "node --watch-path=./dist ./dist/index.js",
    "start": "node dist/index.js",
    "clean": "rm -rf dist",
    "dev": "concurrently \"npm run build:watch\" \"npm run start:watch\"",
